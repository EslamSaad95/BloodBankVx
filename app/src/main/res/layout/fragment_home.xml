<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.HomeCycle.Home_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/dimen_MM"
            android:src="@drawable/ic_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/green"
            android:id="@+id/basic_fr_floatbtn_mkrequest"
            android:layout_marginEnd="@dimen/dimen_MM"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/home_activity_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_style"
            app:tabGravity="fill"
            android:textAlignment="center"
            app:tabSelectedTextColor="#fff"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabMode="fixed"
            app:tabTextColor="#000"></android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_activity_view_pager"
            android:layout_below="@id/home_activity_tab_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            ></android.support.v4.view.ViewPager>


    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.Fragment.UserCycle.ConfirmarionFragment">

   <ImageView
       android:layout_width="@dimen/dimen_logo_width"
       android:layout_height="@dimen/dimen_logo_height"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_margin="@dimen/dimen_M"
       android:layout_above="@id/passconfirm_fr_tv_code"
       android:src="@drawable/ic_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passconfirm_fr_tv_code"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/changing_password_code_tv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/passconfirm_fr_tv_code"
        android:layout_margin="@dimen/dimen_MM">



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_height_layout"
            android:background="@drawable/edit_text_shape"
            android:layout_marginTop="@dimen/dimen_MM"
            android:layout_marginEnd="@dimen/dimen_MM"
            android:layout_marginStart="@dimen/dimen_MM"
            android:paddingStart="@dimen/dimen_MMM"
            android:paddingEnd="@dimen/dimen_MMM"
            android:id="@+id/passconfirm_fr_et_confirmcode">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="@string/confirmation_code"
                android:inputType="text"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_height_layout"
            android:background="@drawable/edit_text_shape"
            android:layout_marginTop="@dimen/dimen_MM"
            android:layout_marginEnd="@dimen/dimen_MM"
            android:layout_marginStart="@dimen/dimen_MM"
            android:paddingStart="@dimen/dimen_MMM"
            android:paddingEnd="@dimen/dimen_MMM"
            android:id="@+id/passconfirm_fr_et_new_pass">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="@string/new_password"
                android:layout_height="wrap_content"></android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_height_layout"
            android:background="@drawable/edit_text_shape"
             android:layout_marginTop="@dimen/dimen_MM"
            android:layout_marginEnd="@dimen/dimen_MM"
            android:layout_marginStart="@dimen/dimen_MM"
            android:paddingStart="@dimen/dimen_MMM"
            android:paddingEnd="@dimen/dimen_MMM"
            android:id="@+id/passconfirm_fr_et_confirm_newpass">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="@string/confirm_new_password"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_M"
            android:layout_marginEnd="@dimen/dimen_MM"
            android:layout_marginStart="@dimen/dimen_MM"
            android:id="@+id/passconfirm_fr_bn_change_pass"
            style="@style/green_btn_style"
            android:text="@string/change_password_btn"/>


    </LinearLayout>

</RelativeLayout>
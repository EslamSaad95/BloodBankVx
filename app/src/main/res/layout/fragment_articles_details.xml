<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".ui.Fragment.HomeCycle.ArticlesDetailsFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/articlesdetails_toolbar"
        android:layout_alignParentTop="true"></include>

    <ImageView
        android:layout_below="@id/articlesdetails_toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_MM"
        android:layout_height="@dimen/album_dp_200"
        android:layout_marginStart="@dimen/dimen_MM"
        android:layout_marginEnd="@dimen/dimen_MM"
        android:id="@+id/articlesdetails_fr_articleimg"
        android:scaleType="fitXY"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/articlesdetails_fr_articleimg"
        android:layout_marginStart="@dimen/dimen_MM"
        android:layout_marginEnd="@dimen/dimen_MM"
        android:layout_marginTop="@dimen/dimen_MMM">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape">
            <TextView
                android:layout_width="wrap_content"
                android:paddingEnd="@dimen/dimen_MMM"
                android:text=""
                android:layout_marginTop="@dimen/dimen_MM"
                android:layout_alignParentEnd="true"
                android:id="@+id/articlesdetails_tv_articletitle"
                android:layout_height="wrap_content" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_unselect_fav"
                    android:layout_marginTop="@dimen/dimen_MM"
                    android:layout_marginStart="@dimen/dimen_MMM"
                    android:background="@android:color/transparent"
                    android:id="@+id/articlesdetails_fr_btn_fav"
                    />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/articlesdetails_tv_articletitle"
                android:layout_marginStart="@dimen/dimen_MMM"
                android:layout_marginTop="@dimen/dimen_MMM"
                android:layout_marginEnd="@dimen/dimen_MMM"
                android:background="@color/lightgray" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/articlesdetails_tv_articlesdetails"
            android:paddingEnd="@dimen/dimen_MMM"
            android:layout_below="@id/articlesdetails_tv_articletitle"
            android:paddingTop="@dimen/dimen_MM"
            android:text=""
            android:paddingStart="@dimen/dimen_MMM"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>